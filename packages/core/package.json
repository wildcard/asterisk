{
  "name": "@asterisk/core",
  "version": "0.1.0",
  "description": "Core TypeScript types for Asterisk",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
