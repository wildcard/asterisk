{
  "name": "@asterisk/qa",
  "version": "0.1.0",
  "description": "QA automation for Asterisk",
  "type": "module",
  "scripts": {
    "setup": "./scripts/setup-test-form.sh",
    "serve": "./scripts/start-test-server.sh",
    "test": "playwright test",
    "test:desktop": "playwright test --project=desktop-app",
    "test:extension": "playwright test --project=extension-popup",
    "test:form-filling": "playwright test --project=form-filling",
    "test:all": "pnpm test:desktop && pnpm test:extension && pnpm test:form-filling",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:full": "pnpm setup && pnpm test"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "typescript": "^5.7.2"
  }
}
